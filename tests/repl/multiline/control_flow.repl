# Nested control flow
>>> def fizzbuzz(n: Int): String
...   if n % 15 == 0
...     "FizzBuzz"
...   elsif n % 3 == 0
...     "Fizz"
...   elsif n % 5 == 0
...     "Buzz"
...   else
...     n.to_s
...   end
... end
=> (defined)

>>> fizzbuzz(15)
=> "FizzBuzz"

>>> fizzbuzz(9)
=> "Fizz"

>>> fizzbuzz(10)
=> "Buzz"

>>> fizzbuzz(7)
=> "7"

