#@ session: variable_persistence
#@ description: Test that variables persist across REPL inputs

# Define multiple variables
>>> x = 10
=> 10

>>> y = 20
=> 20

>>> z = 30
=> 30

# All variables accessible
>>> x + y + z
=> 60

# Variables can reference each other
>>> total = x + y
=> 30

>>> total + z
=> 60

# Modify and use
>>> x = x * 2
=> 20

>>> x + y
=> 40

# String variables persist
>>> greeting = "Hello"
=> "Hello"

>>> name = "World"
=> "World"

>>> "#{greeting}, #{name}!"
=> "Hello, World!"
