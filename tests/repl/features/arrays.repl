#@ session: arrays
#@ description: Test array literals and methods
#@ skip: needs REPL state improvements

# Array literal
>>> [1, 2, 3]
=> [1, 2, 3]

# Empty array
>>> []
=> []

# Array of strings
>>> ["a", "b", "c"]
=> ["a", "b", "c"]

# Array length
>>> [1, 2, 3, 4, 5].length
=> 5

# Array indexing
>>> arr = [10, 20, 30, 40, 50]
=> [10, 20, 30, 40, 50]

>>> arr[0]
=> 10

>>> arr[2]
=> 30

>>> arr[-1]
=> 50

# Array first/last
>>> arr.first
=> 10

>>> arr.last
=> 50

# Array contains
>>> arr.include?(30)
=> true

>>> arr.include?(100)
=> false

# Array push
>>> nums = [1, 2]
=> [1, 2]

>>> nums.push(3)
=> [1, 2, 3]

# Array concatenation
>>> [1, 2] + [3, 4]
=> [1, 2, 3, 4]

# Array reverse
>>> [1, 2, 3].reverse
=> [3, 2, 1]

# Array sort
>>> [3, 1, 4, 1, 5].sort
=> [1, 1, 3, 4, 5]

# Array unique
>>> [1, 2, 2, 3, 3, 3].uniq
=> [1, 2, 3]

# Array flatten
>>> [[1, 2], [3, 4]].flatten
=> [1, 2, 3, 4]

# Array join
>>> ["a", "b", "c"].join("-")
=> "a-b-c"

# Array take/drop
>>> [1, 2, 3, 4, 5].take(3)
=> [1, 2, 3]

>>> [1, 2, 3, 4, 5].drop(2)
=> [3, 4, 5]

# Empty check
>>> [].empty?
=> true

>>> [1].empty?
=> false
