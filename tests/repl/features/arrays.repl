#@ session: arrays
#@ description: Test array literals and methods

# Array literal (Go format: no commas)
>>> [1, 2, 3]
=> [1 2 3]

# Empty array
>>> []
=> []

# Array of strings
>>> ["a", "b", "c"]
=> ["a" "b" "c"]

# Array length
>>> [1, 2, 3, 4, 5].length
=> 5

# Array indexing
>>> arr = [10, 20, 30, 40, 50]
=> [10 20 30 40 50]

>>> arr[0]
=> 10

>>> arr[2]
=> 30

# Array contains
>>> arr.include?(30)
=> true

>>> arr.include?(100)
=> false

# Array reverse
>>> [1, 2, 3].reverse
=> [3 2 1]

# Array sort
>>> [3, 1, 4, 1, 5].sort
=> [1 1 3 4 5]

# Array unique
>>> [1, 2, 2, 3, 3, 3].uniq
=> [1 2 3]

# Array join
>>> ["a", "b", "c"].join("-")
=> "a-b-c"

# Array take/drop
>>> [1, 2, 3, 4, 5].take(3)
=> [1 2 3]

>>> [1, 2, 3, 4, 5].drop(2)
=> [3 4 5]

# Empty check
>>> [].empty?
=> true

>>> [1].empty?
=> false
