#@ session: blocks
#@ description: Test block iteration methods

# each
>>> [1, 2, 3].each { |x| puts x }
1
2
3

# each with do/end
>>> [4, 5, 6].each do |x|
...   puts x * 2
... end
8
10
12

# map (Go array format)
>>> [1, 2, 3].map { |x| x * 2 }
=> [2 4 6]

# map with do/end
>>> [1, 2, 3].map do |x|
...   x + 10
... end
=> [11 12 13]

# select
>>> [1, 2, 3, 4, 5, 6].select { |x| x % 2 == 0 }
=> [2 4 6]

# reject
>>> [1, 2, 3, 4, 5, 6].reject { |x| x % 2 == 0 }
=> [1 3 5]

# reduce
>>> [1, 2, 3, 4, 5].reduce(0) { |acc, x| acc + x }
=> 15

# any?
>>> [1, 2, 3].any? { |x| x > 2 }
=> true

>>> [1, 2, 3].any? { |x| x > 5 }
=> false

# all?
>>> [2, 4, 6].all? { |x| x % 2 == 0 }
=> true

>>> [2, 4, 5].all? { |x| x % 2 == 0 }
=> false

# none?
>>> [1, 3, 5].none? { |x| x % 2 == 0 }
=> true

# times
>>> 3.times { |i| puts i }
0
1
2

# upto
>>> 1.upto(3) { |i| puts i }
1
2
3

# downto
>>> 3.downto(1) { |i| puts i }
3
2
1
